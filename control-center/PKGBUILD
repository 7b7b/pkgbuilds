pkgname=lumina-config
pkgver=1.6
pkgrel=2
pkgdesc="The configuration center"
arch=("x86_64")
license=("BSD")
makedepends=("cmake" "qt5-tools")
depends=(
 "liblumina"
 "qt5-base"
 "qt5-x11extras"
)

source=("$pkgname::git+https://github.com/7b7b/control-panel")
sha256sums=("SKIP")

build() {
	mkdir -p ../build
	cd ../build
	cmake "$srcdir/$pkgname" -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_DATADIR=share
	make
}


package() {
	cd ../build
	make DESTDIR="$pkgdir" install
}
