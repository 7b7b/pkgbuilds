pkgname=lumina-open
pkgver=1.6
pkgrel=2
pkgdesc="The desktop"
arch=("x86_64")
license=("BSD")
makedepends=("cmake" "qt5-tools")
depends=(
 "liblumina"
 "qt5-base"
 "qt5-x11extras"
 "qt5-multimedia"
 "qt5-svg"
)

source=("$pkgname::git+https://github.com/git-fal7/lumina-open")
sha256sums=("SKIP")

build() {
	mkdir -p ../build
	cd ../build
	cmake "$srcdir/$pkgname" -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_DATADIR=share -DCMAKE_INSTALL_BINDIR=bin
	make
}


package() {
	cd ../build
	make DESTDIR="$pkgdir" install
}
